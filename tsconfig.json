{
  "compilerOptions": {
    "target": "ESNext", // or whichever version you prefer
    "module": "ESNext",
    "jsx": "react-jsx", // This enables JSX processing in .tsx files
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["./node_modules/@types", "./routes"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "routes/**/*.d.ts"  // Add this line to include .d.ts files
, "routes/upload.d.ts", "routes/upload.js"  ], // Make sure to include .tsx files
  "exclude": [
    "node_modules"
  ]
}